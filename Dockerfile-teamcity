FROM jetbrains/teamcity-server:latest
MAINTAINER Piotr Jo≈Ñski <yoyo@wp.eu>

RUN mkdir /teamcity

WORKDIR /teamcity

RUN groupadd --gid 2001 teamcity && \
    useradd --system -d /teamcity --uid 2001 --gid teamcity teamcity && \
    chown -Rv teamcity:teamcity /teamcity && \
    chown -Rv teamcity:teamcity /opt/teamcity

USER teamcity

ENV HOME=/teamcity

EXPOSE 8111
